# ============================================================================
# PROJECT CONFIGURATION
# ============================================================================
PROJECT_NAME=vinapp
ENVIRONMENT=STAGING
SERVICE_NAME="RDS Databases"
SERVICE_TYPE=rds

# ============================================================================
# LOG GROUPS TO MONITOR
# ============================================================================
LOG_GROUPS=/aws/rds/instance/vinapp-staging-database/postgresql

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
SENDER_EMAIL=sender@example.com
RECIPIENT_EMAIL=recipient@example.com

# ============================================================================
# MONITORING SETTINGS
# ============================================================================
INTERVAL_MINUTES=60
AWS_REGION=ap-southeast-1

# ============================================================================
# CLOUDFORMATION STACK NAME
# ============================================================================
STACK_NAME=vinapp-rds-monitor-staging

# ============================================================================
# EXISTING IAM RESOURCES
# ============================================================================
IAM_ROLE_ARN=arn:aws:iam::ACCOUNT_ID:role/lambda-execution-role