# ============================================================================
# PROJECT CONFIGURATION
# ============================================================================
PROJECT_NAME=vinapp
ENVIRONMENT=PROD
SERVICE_NAME="Lambda Functions"
SERVICE_TYPE=lambda

# ============================================================================
# LOG GROUPS TO MONITOR
# ============================================================================
LOG_GROUPS=/aws/lambda/vinapp-balance-tracker-v1-prod,/aws/lambda/vinapp-disbursement-service-v1-prod-processTransactions,/aws/lambda/vinapp-disbursement-service-v1-prod-pushTransactions,/aws/lambda/vinapp-send-invites-v1-prod

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
SENDER_EMAIL=sender@example.com
RECIPIENT_EMAIL=recipient@example.com

# ============================================================================
# MONITORING SETTINGS
# ============================================================================
INTERVAL_MINUTES=60
AWS_REGION=ap-southeast-1

# ============================================================================
# CLOUDFORMATION STACK NAME
# ============================================================================
STACK_NAME=vinapp-lambda-monitor-prod

# ============================================================================
# EXISTING IAM RESOURCES
# ============================================================================
IAM_ROLE_ARN=arn:aws:iam::194722442412:role/ECSMetabaseRestartPolicy
